---
import { fetchPosts } from "~/utils/blog";
import { getPermalink } from "~/utils/permalinks";
import { getLangFromUrl, useTranslations } from "~/i18n/utils";
import { Clock, ArrowRight } from "lucide-react";
import { Image } from "astro:assets";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const locale = lang || "en";

const posts = await fetchPosts();
const latestPosts = posts.slice(0, 3);

const localePosts = latestPosts.map((post) => ({
  ...post,
  permalink: post.permalink.replace("%locale%", locale),
  url: getPermalink(post.permalink.replace("%locale%", locale), "post", locale),
}));
---

<section class="py-20 bg-black border-y border-border intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex items-center justify-between mb-12">
      <div>
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-2">
          Latest Writing
        </h2>
        <p class="text-gray-400 text-lg">
          Thoughts on software development, AI, and building systems
        </p>
      </div>
      <a
        href={`/${locale}/blog/`}
        class="hidden md:flex items-center gap-2 text-emerald-400 hover:text-emerald-300 transition-colors font-medium"
      >
        View all
        <ArrowRight class="w-5 h-5" />
      </a>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {
        localePosts.map((post, index) => (
          <a
            href={post.url}
            class="group relative bg-gray-900/50 border border-gray-700 rounded-xl overflow-hidden hover:border-emerald-500/50 transition-all duration-300 hover:-translate-y-1 flex flex-col"
          >
            <div class="absolute inset-0 bg-gradient-to-br from-emerald-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity" />
            
            {post.image && (
              <div class="relative h-48 overflow-hidden">
                <Image
                  src={post.image}
                  alt={post.title}
                  width={600}
                  height={300}
                  class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-gray-900/90 to-transparent" />
              </div>
            )}
            
            <div class="relative p-6 flex flex-col flex-grow">
              <div class="flex items-center gap-2 text-sm text-gray-400 mb-4">
                <Clock class="w-4 h-4" />
                <time datetime={String(post.publishDate)}>
                  {post.publishDate.toLocaleDateString(locale, {
                    year: "numeric",
                    month: "short",
                    day: "numeric",
                  })}
                </time>
              </div>

              <h3 class="text-xl font-bold text-white mb-3 group-hover:text-emerald-400 transition-colors">
                {post.title}
              </h3>

              <p class="text-gray-400 text-sm mb-6 line-clamp-3 flex-grow">
                {post.excerpt || ""}
              </p>

              {post.tags && post.tags.length > 0 && (
                <div class="flex flex-wrap gap-2">
                  {
                    post.tags.slice(0, 3).map((tag) => (
                      <span class="px-3 py-1 bg-gray-800/50 text-gray-300 text-xs rounded-full border border-gray-700">
                        {tag.title}
                      </span>
                    ))
                  }
                </div>
              )}
            </div>
          </a>
        ))
      }
    </div>

    <div class="mt-8 text-center md:hidden">
      <a
        href={`/${locale}/blog/`}
        class="inline-flex items-center gap-2 text-emerald-400 hover:text-emerald-300 transition-colors font-medium"
      >
        View all posts
        <ArrowRight class="w-5 h-5" />
      </a>
    </div>
  </div>
</section>
