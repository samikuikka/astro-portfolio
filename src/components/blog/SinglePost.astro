---
import { Icon } from "astro-icon/components";

import { getFormattedDate } from "~/utils/utils";

import type { Post } from "~/types";
import { Image } from "astro:assets";
import TableOfContents from "./TableOfContents";

export interface Props {
  post: Post;
  url: string | URL;
}

const { post } = Astro.props;
---

<section class="w-full py-8 sm:py-16 lg:py-20 relative">
  <div class="hidden 2xl:block fixed left-[calc((100vw-1800px)/2)] top-28 w-80 pointer-events-none">
    <div class="pointer-events-auto max-h-[calc(100vh-8rem)] overflow-y-auto">
      <TableOfContents client:load />
    </div>
  </div>
  <article class="max-w-5xl mx-auto px-4 sm:px-6">
    <header
      class={post.image
        ? "intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
        : "intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"}
    >
      <div
        class="flex justify-between flex-col sm:flex-row max-w-3xl mx-auto mt-0 mb-2 px-0 sm:items-center"
      >
        <p>
          <Icon
            name="tabler:clock"
            class="w-4 h-4 inline-block -mt-0.5 dark:text-white"
          />
          <time datetime={String(post.publishDate)} class="inline-block"
            >{getFormattedDate(post.publishDate)}</time
          >
          {
            post.author && (
              <>
                {" "}
                ·{" "}
                <Icon
                  name="tabler:user"
                  class="w-4 h-4 inline-block -mt-0.5 dark:text-white"
                />
                <span class="inline-block">{post.author}</span>
              </>
            )
          }
          {
            post.readingTime && (
              <>
                &nbsp;· <span>{post.readingTime}</span> min read
              </>
            )
          }
        </p>
      </div>

      <h1
        class="max-w-3xl mx-auto text-4xl md:text-5xl font-bold leading-tighter tracking-tighter font-heading"
      >
        {post.title}
      </h1>
      <p
        class="max-w-3xl mx-auto mt-4 mb-8 text-xl md:text-2xl text-muted dark:text-white text-justify"
      >
        {post.excerpt}
      </p>

      {
        post.image ? (
          <Image
            src={post.image}
            class="max-w-full lg:max-w-[900px] mx-auto mb-6 sm:rounded-md bg-white dark:bg-slate-700"
            sizes="(max-width: 900px) 400px, 900px"
            alt={post?.excerpt || ""}
            width={900}
            height={506}
            loading="eager"
            decoding="async"
          />
        ) : (
          <div class="max-w-3xl mx-auto">
            <div class="border-t dark:border-slate-700" />
          </div>
        )
      }
    </header>
    <div
      class="max-w-3xl mx-auto prose prose-md lg:prose-xl dark:prose-invert dark:prose-headings:text-white prose-headings:font-heading prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-a:text-white dark:prose-a:text-blue-400 prose-img:rounded-md prose-img:shadow-lg mt-8 prose-headings:scroll-mt-[80px] prose-li:my-0"
    >
      <slot />
    </div>
  </article>
</section>
